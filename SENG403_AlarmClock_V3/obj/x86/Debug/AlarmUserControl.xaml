<UserControl x:Class="SENG403_AlarmClock_V3.AlarmUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SENG403_AlarmClock_V2"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="325">
    <Border BorderBrush="White" BorderThickness="2">
        <Grid Background="Black">

            <TextBlock x:ConnectionId='1' x:Name="AlarmTypeLabel" Foreground="White" Text="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,10,0,0" Height="21"/>
            <TextBlock x:ConnectionId='2' x:Name="AlarmTimeLabel" Foreground="White" Text="Alarm Not Set" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" Height="23"/>
            <StackPanel>
                <StackPanel>
                    <Button x:ConnectionId='7' x:Name="EditAlarm_Button" Background="Blue" FontSize="10" Foreground="White" Content="Edit" HorizontalAlignment="Left" Margin="170,33,0,0" VerticalAlignment="Top" Width="65" RenderTransformOrigin="0.2,0.5" Height="23"                        />
                    <Button x:ConnectionId='8' x:Name="SnoozeAlarmButton" Visibility="Collapsed" Background="DarkBlue" FontSize="10" Foreground="White" Content="Snooze" HorizontalAlignment="Left" Margin="170,33,0,0" VerticalAlignment="Top" Width="65" RenderTransformOrigin="0.2,0.5" Height="23"                          />
                </StackPanel>
                <Frame></Frame>
            </StackPanel>
            <Button x:ConnectionId='3' x:Name="EnableDisableAlarm_Button" FontSize="10" Background="Green" Foreground="White" Content="Enable" HorizontalAlignment="Left" Margin="55,33,0,0" VerticalAlignment="Top" Width="66"                                         Height="23" RenderTransformOrigin="-0.545,1.304"/>

            <Button x:ConnectionId='4' x:Name="DeleteAlarm_Button" Background="Transparent"  HorizontalAlignment="Left" Margin="306,0,0,0" VerticalAlignment="Top" Width="15" Height="15" RenderTransformOrigin="0.333,0.2"                          >
                <Image x:ConnectionId='6' x:Name="DeleteButtonImage" Source="Images/x_button.png" HorizontalAlignment="Left" Margin="-10,-6,-5,-6" Width="15"/>
            </Button>
            <Button x:ConnectionId='5' x:Name="DismissAlarmButton" FontSize="10" Visibility="Collapsed" Background="DarkBlue" Foreground="White" Content="Dismiss" HorizontalAlignment="Left" Margin="55,33,0,0" VerticalAlignment="Top" Width="66"                                 Height="23" RenderTransformOrigin="-0.545,1.304"/>

        </Grid>
    </Border>

</UserControl>

